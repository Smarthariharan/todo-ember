<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
<div class="container">
  <h2>New Todo</h2>
  <form>
    <div class="input-group col-xs-6">
      <label for="todo-title">Title:</label>
      {{input type="text" class="form-control" placeholder="Enter title" value=title}}
    </div>
    <br>
    <button {{action 'saveTodo'}} type="submit" class="btn btn-primary ">Save</button>
  </form>
</div>
{{outlet}}
