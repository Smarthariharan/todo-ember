<div class="container">
  <h2>New Todo</h2>
  <form>
    <div class="form-group">
      <label for="todo-title">Title:</label>
      {{input type="text" class="form-control" placeholder="Enter title" value=title}}
    </div>
    <button {{action 'saveTodo'}} type="submit" class="btn btn-primary">Save</button>
  </form>
</div>
{{outlet}}
